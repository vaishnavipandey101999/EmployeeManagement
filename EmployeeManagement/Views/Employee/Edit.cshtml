@{
}
@model EmployeeManagement.Entities.Employees

<h1>Edit Employee Detail</h1>
@if (Model is null)
{
    <p>No Employee was found with this Id</p>
}
else {
<form method="post">
    <div class="mt-3">
        <label class="form-label">Employee Id</label>
        <input type="text" class="form-control" asp-for="EmployeeId" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Department Name</label>
        <input type="text" class="form-control" asp-for="Department" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Edit</button>
            <button type="submit" class="btn btn-danger ms-3"
            asp-action="Delete" asp-controller="Employee" >Delete</button>
    </div>

</form>
}


