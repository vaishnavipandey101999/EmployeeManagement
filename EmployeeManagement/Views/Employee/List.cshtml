@{
}
@model List<EmployeeManagement.Entities.Employees>
<h1>Employee Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Date of Joining</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model){
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td>@employee.DateOfJoining.ToString("dd-MM-yyyy")</td>
                <td>
                    <a class="btn btn-info" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a>
                    </td>
            </tr>
        }
    </tbody>
</table>
